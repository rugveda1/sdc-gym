generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  email     String       @unique
  password  String
  name      String?
  profile   Profile?
  workouts  WorkoutLog[]
  dietPlans DietPlan[]
}

model Profile {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  userId       String @unique @db.ObjectId
  user         User   @relation(fields: [userId], references: [id])
  weightKg     Float
  heightCm     Float
  region       String
  eatingHabits String
  goal         String
}

model WorkoutLog {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  userId String   @db.ObjectId
  user   User     @relation(fields: [userId], references: [id])
  muscle String
  date   DateTime @default(now())
}

model DietPlan {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  planData  String // JSON string of the diet plan
  createdAt DateTime @default(now())
}
